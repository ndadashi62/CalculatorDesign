<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="5"
    android:layout_margin="2dp">

    <Button
        android:id="@+id/btnC"
        android:text="C"
        android:layout_columnWeight="1"
        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
         />

    <Button
        android:id="@+id/btnPercentage"
        android:text="%"
        android:layout_columnWeight="1"

        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        />
    <Button
        android:id="@+id/btnDivision"
        android:text="/"
        android:layout_columnWeight="1"

        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        />


    <Button
        android:id="@+id/btnMultiplition"
        android:text="*"
        android:layout_columnWeight="1"

        style="@style/FunctionalButtons"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        />


    <!---2nd line of Buttons-->
    <Button
        android:id="@+id/btn7"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="7"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="8"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        style="@style/NumberButtons"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="9"
        android:text="9" />

    <Button
        android:id="@+id/btnMinus"
        android:text="-"
        style="@style/FunctionalButtons"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        />


    <!---third line of Buttons-->
    <Button
        android:id="@+id/btn4"
        style="@style/NumberButtons"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="4"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        style="@style/NumberButtons"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="5"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        style="@style/NumberButtons"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="6"
        android:text="6" />

    <Button
        android:id="@+id/btnAdd"
        android:text="+"
        style="@style/FunctionalButtons"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        />


    <!---forth line of Buttons-->
    <Button
        android:id="@+id/btn1"
        style="@style/NumberButtons"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="1"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        style="@style/NumberButtons"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="2"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        style="@style/NumberButtons"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="3"
        android:text="3" />

    <Button
        android:id="@+id/btnEqual"
        style="@style/EqualButtons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_row="3"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:text="=" />

    <!---fivth line of Buttons-->
    <Button
        android:id="@+id/btnDesimal"
        style="@style/NumberButtons"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="."
        android:text="." />

    <Button
        android:id="@+id/btn0"
        style="@style/NumberButtons"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="0"
        android:text="0" />

    <Button
        android:id="@+id/btn00"
        style="@style/NumberButtons"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:tag="00"
        android:text="00" />


</GridLayout>